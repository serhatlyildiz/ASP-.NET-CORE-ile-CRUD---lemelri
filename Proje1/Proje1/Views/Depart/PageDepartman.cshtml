 @using Proje1.Models
 @model List<departmanlar>


@{
    ViewData["Title"] = "PageDepartman";
    Layout = "~/Views/Depart/Index.cshtml";
}

<h2>Departman Listesi</h2>

<div class="col-lg-12" style="text-align:right">
    <a href="/Depart/YeniDepartman" class="btn btn-success">Yeni Departman Ekle</a>
</div>

<hr />

<table class="table table-hover"> 
    <thead>
        <tr>
            <th>ID</th>
            <th>Departman Adı</th>
            <th>Departman Detay</th>
            <th style="width:100px">Güncelle</th>
            <th style="width:100px">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ID</td>
            <td>@item.DepartmanAd</td>
            <td>@item.Detay</td>
            <td><a href="/Depart/GuncelleDepartman/?ID=@item.ID" class="btn btn-primary"> Güncelle</a> </td>
            <td><a href="/Depart/SilDepartman/?ID=@item.ID" class="btn btn-danger"> Sil</a> </td>
        </tr>
        }
    </tbody>
</table>